import common/*;
import condition/*
import expr/*
import function/*
import variable/*;

cll:
    // copiable_method_call does not require braces here
    &cll_begin('$') ((cll_var | cll_if | expr | copiable_method_call | method_call | loop_while | loop_for) END )+ 

    data: $2;
;