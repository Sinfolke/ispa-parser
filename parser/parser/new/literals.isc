STRING:
    ('\'' @ (('\\' . ) | [^'] )* '\'')

    {@}
;
NUMBER:

    @ [+-]? @ ( [0-9]+ ) @ ([.,] [0-9]+)?
    
    @{sign, main, dec}
;
BOOLEAN:
    &d('true' | 'false')

    {d}
;
array: 

    '[' ( ( @ cll.expr ',')* )? ']'

    {@}
;
object:
    '{'
        ( @ ID | NUMBER ':' @ cll.expr ( ',' @ ID | NUMBER ':' @ cll.expr )* ';' )?
    '}'
    @{key, value, keys, values}
;
rvalue:

    @ BOOLEAN | NUMBER | STRING | ID | AT | array | object
    
    {@}
;
