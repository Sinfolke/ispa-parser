name Parser;
END: [;\n];
STRICT_END: ';';
NEWLINE: [\n];
LINEAR_COMMENT:
    '//' [^\n]*
;
QUESTION_MARK: '?';
PLUS: '+';
MINUS: '-';
DIVIDE: '/';
MULTIPLE: '*';
MODULO: '%';
AT: '@';
ID:
    @ ([a-zA-Z_][a-zA-Z0-9_]*)
    {@}
;
main:
    @ ( _use | rule )+
    {@}
;
_use:
    'use' @ #unit (',' @ #unit)* STRICT_END

    @{first, second}

    #unit:
        @ ID @ rvalue?

        @{name, value}
    ;
;